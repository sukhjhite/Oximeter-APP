<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sukhdeep75.bp_monitor">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/heart_attack"
        android:label="@string/app_name"
        android:roundIcon="@drawable/heart_attack"
        android:supportsRtl="true"
        android:theme="@style/Theme.BPMonitor">
        <activity
            android:name=".activities.Dashboard"
            android:exported="true" />
        <activity
            android:name=".activities.Connect"
            android:exported="true" />
        <activity
            android:name=".activities.Check"
            android:exported="true" />
        <activity
            android:name=".activities.Home"
            android:exported="true"
            android:label="@string/title_activity_home"
            android:theme="@style/Theme.BPMonitor.NoActionBar" />
        <activity
            android:name=".activities.Signup"
            android:exported="true" />
        <activity
            android:name=".activities.Login"
            android:exported="true" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>